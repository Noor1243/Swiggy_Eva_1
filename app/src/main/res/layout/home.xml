<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85/4 D Samanabad Lahore, Pakistan"
                android:textSize="14sp"
                android:textColor="#888" />
        </LinearLayout>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/profile_dp_colored"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <!-- Search bar section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#f1f1f4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search for "
            android:textSize="16sp"
            android:textColor="#888" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_search"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <!-- Body content section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:src="@drawable/homeimage1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Repeat similar blocks for other categories -->

            </LinearLayout>

            <!-- ViewPager Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <!-- Title or Heading for the ViewPager Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:paddingBottom="10dp"
                    android:text="Delicious Food Picks"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <!-- ViewPager to display food-related images -->

                <ImageView
                    android:id="@+id/imageView_food"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Food Image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/homead2" />

            </LinearLayout>


            <!-- Footer section -->
            <LinearLayout
                android:padding="30dp"
                android:background="#f1f1f4"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Live it up!"
                    android:textSize="40sp"
                    android:textColor="#888"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crafted with ❤️ by Amna Noor"
                    android:textSize="16sp"
                    android:textColor="#888" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
